<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PokemonDetailFragment">

    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="411dp"
        android:layout_height="234dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pokemonDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Pikachu"
        android:textColor="#0E0E0E"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonImage" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toEndOf="@id/pokemonDetailName"
        app:layout_constraintTop_toBottomOf="@+id/pokemonImage">
        <TableRow
            android:id="@+id/typesRow">
            <TextView android:text="Normal"
                android:textSize="12dp"
                android:layout_marginRight="5dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="372dp"
        android:layout_height="218dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto TextView poto "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonDetailName" />
</androidx.constraintlayout.widget.ConstraintLayout>